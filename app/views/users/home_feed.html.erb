<main role="main" class="mx-auto py-5">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="card mb-3 w-100">
                    <div class="py-3 d-flex align-items-center justify-content-center">
                        <%= image_tag gravatar_for(current_user), class: 'w-50' %>
                    </div>
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="card-body text-center">
                            <h2 class="card-title"><%= current_user.name %></h2>
                            <p class="card-text"><%= current_user.email %></p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-center text-center">
                        <div class="w-25 mx-auto">
                            <h5>10</h5>
                            <p>posts</p>
                        </div>
                        <div class="w-25 mx-auto">
                            <h5>5</h5>
                            <p>following</p>
                        </div>
                        <div class="w-25 mx-auto">
                            <h5>3</h5>
                            <p>followers</p>
                        </div>
                    </div>
                    <div class="bg-light p-3 w-100">
                        <%= form_for(@micropost) do |f| %>
                            <div class="form-group">
                                <%= f.text_area :content, rows: 4, placeholder: 'Share your thoughts...', class: 'form-control' %>
                            </div>
                            <div class="form-group">
                                <%= f.file_field :picture %>
                            </div>
                            <%= f.submit 'Post', class: 'btn btn-outline-primary btn-block' %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="col-8">
                <h1>Feed</h1>
                <div class="card-columns" >
                    <% @microposts.each do |micropost| %>
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row no-gutters">
                                <div class="col-1"></div>
                                <div class="col-3 d-flex align-items-center justify-content-center">
                                    <%= image_tag gravatar_for(micropost.user), class: 'w-100' %>
                                </div>
                                <div class="col-8 d-flex align-items-center justify-content-center">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= micropost.user.name %></h5>
                                        <p class="card-text"><%= micropost.content %></p>
                                        <p class="card-text"><small class="text-muted"><%= micropost.created_at %></small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

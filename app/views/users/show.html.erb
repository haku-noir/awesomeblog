<main role="main" class="mx-auto py-5">
    <div class="container">
        <div class="card mb-3 w-100 bg-info">
            <div class="row no-gutters">
                <div class="col-3 d-flex align-items-center justify-content-center">
                    <%= image_tag 'icon.png', class: 'w-100' %>
                </div>
                <div class="col-4 d-flex align-items-center justify-content-center">
                    <div class="card-body">
                        <h2 class="card-title"><%= current_user.name %></h2>
                        <p class="card-text"><%= current_user.email %></p>
                    </div>
                </div>
                <div class="col-5 d-flex align-items-center justify-content-center text-center">
                    <div class="w-25 mx-auto">
                        <h5>10</h5>
                        <p>posts</p>
                    </div>
                    <div class="w-25 mx-auto">
                        <h5>5</h5>
                        <p>following</p>
                    </div>
                    <div class="w-25 mx-auto">
                        <h5>3</h5>
                        <p>followers</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-columns" >
            <% @posts.each do |post| %>
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-1"></div>
                        <div class="col-3 d-flex align-items-center justify-content-center">
                            <%= image_tag 'icon.png', class: 'w-100' %>
                        </div>
                        <div class="col-8 d-flex align-items-center justify-content-center">
                            <div class="card-body">
                                <h5 class="card-title"><%= post[:user] %></h5>
                                <p class="card-text"><%= post[:value] %></p>
                                <p class="card-text"><small class="text-muted"><%= post[:date] %></small></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</main>


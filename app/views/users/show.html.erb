<main role="main" class="mx-auto py-5">
    <div class="container">
        <div class="card mb-3 w-100 bg-light">
            <div class="row no-gutters">
                <div class="col-3 d-flex align-items-center justify-content-center">
                    <%= image_tag gravatar_for(@user), class: 'w-100' %>
                </div>
                <div class="col-4 d-flex align-items-center justify-content-center">
                    <div class="card-body">
                        <h2 class="card-title"><%= @user.name %></h2>
                        <p class="card-text"><%= @user.email %></p>
                        <%= render 'follow_button', user: @user %>
                    </div>
                </div>
                <div class="col-5 d-flex align-items-center justify-content-center text-center">
                    <%= render 'user_params', user: @user %>
                </div>
            </div>
        </div>
        <div class="card-columns" >
            <% @microposts.each do |micropost| %>
                <%= render 'micropost', micropost: micropost %>
            <% end %>
        </div>
    </div>
</main>

